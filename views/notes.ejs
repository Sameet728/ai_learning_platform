<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>üìù Notes Dashboard | LearnSmart</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .navbar {
      background: #fff;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      padding: 1rem 0;
      position: relative;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .nav-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      font-size: 1.5rem;
      font-weight: bold;
      color: #2c3e50;
      text-decoration: none;
    }

    .nav-links {
      display: flex;
      gap: 2rem;
      align-items: center;
    }

    .nav-links a {
      text-decoration: none;
      color: #2c3e50;
      transition: color 0.3s ease;
    }

    .nav-links a:hover {
      color: #3498db;
    }

    .mobile-menu-btn {
      display: none;
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #2c3e50;
    }

    .cta-button {
      display: inline-block;
      padding: 0.5rem 1.2rem;
      background: #3498db;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      transition: background 0.3s ease;
    }

    .cta-button:hover {
      background: #2980b9;
    }

    .nav-links .login-button {
      text-decoration: none;
      border: 2px solid #2c3e50;
      border-radius: 5px;
      padding: 8px 15px;
      display: inline-block;
    }

    @media (max-width: 768px) {
      .mobile-menu-btn {
        display: block;
      }

      .nav-links {
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        background: #fff;
        flex-direction: column;
        gap: 0;
        padding: 1rem 0;
        box-shadow: 0 5px 10px rgba(0,0,0,0.1);
        display: none;
      }

      .nav-links.active {
        display: flex;
      }

      .nav-links a {
        padding: 1rem;
        width: 100%;
        text-align: center;
      }

      .nav-links .cta-button,
      .nav-links .login-button {
        margin: 0.5rem auto;
        display: block;
        width: 80%;
        text-align: center;
      }
    }
  </style>
</head>
<body class="bg-gray-100 text-gray-800 font-sans">

  <!-- Navbar -->
  <nav class="navbar">
    <div class="container nav-container">
      <a href="/" class="logo">LearnSmart</a>
      <button class="mobile-menu-btn" id="mobileMenuBtn">
        <i class="fas fa-bars"></i>
      </button>
      <div class="nav-links" id="navLinks">
        <a href="/notes">Notes</a>
        <a href="/todo">To-Do</a>
        <% if (currentUser) { %>
          <a href="/dashboard" class="cta-button">Dashboard</a>
          <a href="/logout" class="login-button">Logout</a>
        <% } else { %>
          <a href="/login" class="login-button">Login</a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- Notes Dashboard Content -->
  <div class="max-w-3xl mx-auto mt-10 p-6 bg-white rounded shadow">
    <h1 class="text-3xl font-bold mb-6 text-indigo-600 text-center">üìù Your Notes</h1>

    <!-- Form to Add New Note -->
    <form action="/notes" method="POST" class="mb-8 space-y-4">
      <input type="text" name="title" placeholder="Title" required class="border p-2 w-full rounded" />
      <textarea name="content" placeholder="Write your note..." required class="border p-2 w-full rounded h-24"></textarea>
      <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">‚ûï Add Note</button>
    </form>

    <!-- Display Notes -->
    <% if (user.notes.length === 0) { %>
      <p class="text-gray-500">You have no notes yet.</p>
    <% } else { %>
      <div class="space-y-4">
        <% user.notes.forEach((note, index) => { %>
          <div class="bg-gray-50 p-4 rounded shadow">
            <h3 class="text-xl font-semibold"><%= note.title %></h3>
            <p class="text-gray-700 mb-4"><%= note.content %></p>
            <div class="flex space-x-4">
              <a href="/notes/edit/<%= index %>" class="text-blue-600 hover:underline">‚úèÔ∏è Edit</a>
              <form action="/notes/delete/<%= index %>" method="POST" class="inline-block">
                <button type="submit" class="text-red-600 hover:underline">üóëÔ∏è Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <script>
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const navLinks = document.getElementById('navLinks');

    mobileMenuBtn.addEventListener('click', () => {
      navLinks.classList.toggle('active');
    });

    document.querySelectorAll('.nav-links a').forEach(link => {
      link.addEventListener('click', () => {
        if (window.innerWidth <= 768) {
          navLinks.classList.remove('active');
        }
      });
    });
  </script>

</body>
</html>

