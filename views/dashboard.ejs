<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard | LearnSmart</title>
  <link rel="stylesheet" href="/css/dashboard.css" />
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f4f6f8;
      margin: 0;
      padding: 30px;
    }

    .title {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 40px;
    }

    .dashboard-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 25px;
    }

    .card {
      width: 450px;
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      transition: transform 0.2s;
    }

    .card:hover {
      transform: scale(1.01);
    }

    .card-header {
      background-color: #3498db;
      color: white;
      padding: 20px;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .card-body {
      padding: 20px;
      display: block;
      background-color: #fdfdfd;
    }

    details summary {
      font-weight: bold;
      cursor: pointer;
      margin-bottom: 10px;
    }

    .resource-box {
      background-color: #f1f1f1;
      padding: 15px;
      border-radius: 5px;
      white-space: pre-wrap;
      font-size: 14px;
      line-height: 1.5;
      margin-top: 15px;
    }
  </style>
</head>

<body>
  <h1 class="title">ğŸ“š Your AI-Powered Learning Dashboard</h1>

  <div class="dashboard-container">
    <% if (user.quizzes.length === 0) { %>
      <p>No quizzes found!</p>
    <% } else { %>
      <% user.quizzes.forEach((quiz, index) => { 
          const matchingResource = user.resources.find(r => r.topic === quiz.topic); 
      %>
        <div class="card">
          <div class="card-header">
            <span>ğŸ“˜ <%= quiz.topic %></span>
            <span>ğŸ—“ï¸ <%= new Date(quiz.date).toLocaleDateString() %></span>
          </div>

          <div class="card-body">
            <details open>
              <summary>ğŸ“‹ Questions & Answers</summary>
              <ol>
                <% quiz.results.forEach((q, qIndex) => { %>
                  <li style="margin-bottom: 12px;">
                    <strong>Q<%= qIndex + 1 %>: <%= q.question || "No question available" %></strong><br/>
                    
                    <em>Options:</em> 
                    <%= Array.isArray(q.options) ? q.options.join(', ') : "Options not available" %><br/>
                    
                    âœ… <strong>Correct:</strong> <%= q.correctAnswer || "N/A" %><br/>
                    
                    ğŸ§‘â€ğŸ“ <strong>Your Answer:</strong>
                    <span style="color: <%= q.userAnswer === q.correctAnswer ? 'green' : 'red' %>;">
                      <%= q.userAnswer || "N/A" %>
                    </span>
                  </li>
                <% }) %>
              </ol>
            </details>

            <% if (matchingResource) { %>
              <details>
                <summary>ğŸ§  AI Resource</summary>
                <div class="resource-box">
                  <%= matchingResource.content %>
                </div>
              </details>
            <% } else { %>
              <p style="margin-top: 10px; color: #888;">No AI resource available for this quiz.</p>
            <% } %>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</body>
</html>
